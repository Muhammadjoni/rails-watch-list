
<div class="row">
  <div class="col-md-9">

    <h1>List of the Movies</h1>

      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @lists.each do |list| %>
            <tr>
              <td><%= list.name %></td>
              <td>
                <%= link_to 'Details',
                            list,
                            class: 'btn btn-xs btn-warning' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>

  <div class="col-md-9">
    <%= link_to 'New List', new_list_path, class: 'btn btn-xs btn-primary'%>
  </div>
</div>
