<div class="navbar navbar-expand-sm navbar-secondary navbar-lewagon ">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://image.shutterstock.com/image-vector/film-strip-round-banner-design-260nw-260628887.jpg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active" >
        <%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: 'btn btn-xs btn-primary mx-2 '%>
      </li>
      <li class="nav-item">
        <%= link_to 'Back', lists_path, class: 'btn btn-xs btn-secondary'%>
      </li>

    </ul>
  </div>
</div>


<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1585951237318-9ea5e175b891?ixid=MnwxMjA3fDB8MHxzZWFyY2h8OHx8bW92aWV8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60)">
</div>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-9">
      <div class="card-product">
        <% @list.bookmarks.each do |bookmark| %>
          <img src="<%=bookmark.movie.poster_url%>">
            <div class="card-product-infos">

              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.movie.overview %><br>
              <a href="<%= bookmark.movie.poster_url %>" alt="poster_url"></p>
              <span><%= bookmark.movie.rating %></span>
              <p><%= bookmark.comment %></p>

              <%= link_to 'Destroy',
                            bookmark,
                            method: :delete,
                            class: 'btn btn-xs btn-danger',
                            data: { confirm: 'Are you sure?' } %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
